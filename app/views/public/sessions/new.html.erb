<div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
  <h5 class="text-dark bg-light py-4 mb-0"><i class="fas fa-sign-in-alt" aria-hidden="true"></i> ログイン</h5>

  <div class="form-body p-4">

    <%= form_with model: @member, url: member_session_path do |f| %>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-envelope"></i></span>
        </div>
        <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" aria-hidden="true"><i class="fas fa-lock"></i></span>
        </div>
        <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword", placeholder:"パスワード" %>
      </div>

      <%= f.submit "ログイン", class:"btn btn-success w-75 mt-2" %>
    <% end %>

    <div class="mt-5">
      <p class="text-secondary mb-2"><span>------------</span> 新しいお客様ですか？ <span>------------</span></p>
      <%= link_to "アカウントを作成", new_member_registration_path, class:"btn btn-secondary" %>
    </div>

  </div>
</div>