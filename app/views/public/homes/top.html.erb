    <div class="btn-wrapper col-10 mx-auto">
        <div class="row mt-4">
            <%= link_to new_member_session_path, class:"btn btn-success btn-block mb-3" do %>
            <i class="fas fa-sign-in-alt" aria-hidden="true"></i> ログイン
            <% end %>
        </div>
        <div class="row">
            <%= link_to new_member_registration_path, class:"btn btn-info btn-block mb-3" do %>
            <i class="fas fa-user-plus" aria-hidden="true"></i> 新規登録
            <% end %>
        </div>
    </div>

</div>