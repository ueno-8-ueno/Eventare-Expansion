<header class="shadow-sm">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">

      <% if admin_signed_in? %>
        <%= link_to "Eventare", admin_path, class: 'navbar-brand p-3' %>
      <% else %>
        <%= link_to "Eventare", root_path, class: 'navbar-brand p-3' %>
      <% end %>
      
      <ul class="navbar-nav ml-auto">
        <% if admin_signed_in? %>
          <li class="nav-item">
            <%= link_to admin_path, class: 'nav-link text-dark' do %>
                <i class="fa-solid fa-user"></i> 会員一覧
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to admin_path, class: 'nav-link text-dark' do %>
                <i class="fa-solid fa-calendar-days"></i> イベント一覧
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to admin_path, class: 'nav-link text-dark' do %>
                <i class="fa-solid fa-tag"></i> ジャンル一覧
            <% end %>
          </li>
          
          <li class="nav-item">
            <%= button_to destroy_admin_session_path, method: :delete, "data-confirm" => "本当にログアウトしますか？", class: 'nav-link text-dark' do %>
              <i class="fas fa-sign-out-alt" aria-hidden="true"></i> ログアウト
            <% end %>
          </li>

        <% elsif member_signed_in? %>
          <li class="nav-item">
            <%= link_to root_path, class: 'nav-link text-dark' do %>
                <i class="fa-solid fa-plus" aria-hidden="true"></i> 投稿フォーム
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to root_path, class: 'nav-link text-dark' do %>
              <i class="fa-solid fa-globe"></i> みんなのTODO
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to root_path, class: 'nav-link text-dark' do %>
              <i class="fas fa-user" aria-hidden="true"></i> マイページ
            <% end %>
          </li>
          <li class="nav-item">
            <%= button_to destroy_member_session_path, method: :delete, "data-confirm" => "本当にログアウトしますか？", class: 'nav-link text-dark' do %>
              <i class="fas fa-sign-out-alt" aria-hidden="true"></i> ログアウト
            <% end %>
          </li>

        <% else %>
          <li class="nav-item">
            <%= link_to about_path, class: 'nav-link text-dark' do %>
              <i class="fas fa-link" aria-hidden="true"></i> 概要
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_member_registration_path, class: 'nav-link text-dark' do %>
              <i class="fas fa-user-plus" aria-hidden="true"></i> 新規登録
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_member_session_path, class: 'nav-link text-dark' do %>
              <i class="fa-solid fa-right-to-bracket"></i> ログイン
            <% end %>
          </li>
        <% end %>
      </ul>
      
    </div>
  </nav>
</header>