<!-- ユーザーの詳細 -->
<div class="col-2 pt-2 pb-4">
    <%= image_tag @member.get_profile_image(150, 150), class:"mt-3 rounded-circle"; %>
</div>
<div class="col-10">
    <p class="text-secondary mt-2"><i class="fa-solid fa-list-check"></i> <%= @member.events.count %>件のTODO</p>
    <strong><p class="mt-2 h3"><%= @member.name %></p></strong>
    <p class="pt-3"><%= @member.introduction %></p>

    <p class="pt-3">
        <% if @member.is_active %>
            <p class="text-success">有効アカウント</p>
        <% else %>
            <p class="text-secondary">退会アカウント</p>
        <% end %>
    </p>
    
    <% if @member.is_active %>
        <%= button_to "退会処理", admin_member_path(@member), method: :patch, class:"btn btn-outline-danger btn-block w-50" %>
    <% else %>
        <%= button_to "入会処理", admin_member_path(@member), method: :patch, class:"btn btn-outline-success btn-block w-50" %>
    <% end %>
    
</div>

<!--投稿一覧-->
<%= render 'public/events/index', events: @member.events %>