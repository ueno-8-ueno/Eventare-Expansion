<div class="col-12 text-center">
    <h4 class="p-3 border-bottom">会員一覧</h4>
</div>

<div class="col-10 mt-5 mx-auto">
    <table class="table table-hover table-inverse">
        <thead>
            <th scope="row">会員ID</th>
            <th scope="row">アイコン</th>
            <th scope="row">ユーザーネーム</th>
            <th scope="row">概要欄</th>
            <th scope="row">会員ステータス</th>
        </thead>

        <tbody>
            <% @members.each do |member| %>
            <tr>
                <td>
                    <%= member.id %>
                </td>
                <td><%= link_to admin_member_path(member) do %>
                        <%= image_tag member.get_profile_image(100, 100), class:"mt-3 rounded-circle"; %>
                    <% end %>
                </td>
                <td>
                    <%= link_to admin_member_path(member) do %>
                        <%= member.name %>
                    <% end %>
                </td>
                <td>
                    <%= member.introduction %>
                </td>
                <td>
                    <% if member.is_active %>
                        <p class="text-success">有効</p>
                    <% else %>
                        <p class="text-secondary">退会</p>
                    <% end %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>