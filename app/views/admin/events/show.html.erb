<h4 class="p-3 border-bottom text-center">イベントTODO詳細</h4>

<div class="col-4">
    <div class="pt-4 pl-5">
    <h6><i class="fa-solid fa-user"></i> 投稿ユーザー</h6>
    <%= link_to(admin_member_path(@event.member), class:"text-dark") do %>
        <%= image_tag @event.member.get_profile_image(150,150), class:"mt-3 rounded-circle"; %>
        <p class="h5"><%= @event.member.name %></p>
    <% end %>
    </div>
</div>

<div class="col-8">
    <div class="p-3 w-75">
        <h6 class="border-bottom"><i class="far fa-flag"></i> イベント名:</h6>
        <p class="h5"><%= @event.name %></p>
    </div>

    <div class="p-3 w-75">
        <h6 class="border-bottom"><i class="fa-regular fa-clock"></i> イベント開催日程:</h6>
        <p class="h5"><%= @event.start_at %> ~ <%= @event.end_at %></p>
    </div>

    <div class="p-3 w-75">
        <h6 class="border-bottom"><i class="fa-solid fa-pen-fancy"></i> イベント詳細:</h6>
        <p class="h5"><%= @event.introduction %></p>
    </div>

    <div class="p-3 w-75">
        <h6 class="border-bottom"><i class="fa-solid fa-tag"></i> ジャンル:</h6>
        <p class="h5"><%= @event.genre.name %></p>
    </div>

    <div class="p-3 w-75">
        <h6 class="border-bottom"><i class="fa-solid fa-check"></i> 完了状態:</h6>
        <% if @event.is_done %>
            <p class="h5 text-success">完了</p>
        <% else %>
            <p class="h5 text-danger">未済</p>
        <% end %>
    </div>
</div>